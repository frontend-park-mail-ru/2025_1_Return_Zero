<div class="profile__info">
    <img class="profile__info__img" src="{{this.user.avatar_url}}" alt="error loading avatar">
    <div>
        <div class="profile__info__header">
            <h2 class="profile__info__username">{{this.user.username}}</h2>
            <div class="profile__info__actions dropdown">
                <label class="dropdown__label" for="actions">
                    <img  src="/static/img/dots.svg" alt="edit">
                </label>
                <input id="actions" class="dropdown__checkbox" type="checkbox" id="edit" class="profile__info__actions__checkbox">
                <div class="dropdown__content">
                    <a href="/profile/settings" class="profile__info__actions__edit">Редактировать</a>
                    <a class="profile__info__actions__copy-link">Скопировать ссылку</a>
                </div>
            </div>
        </div>
        <div class="profile__info__stats">
            <span>{{#if this.user.statistics.minutes_listened includeZero=true}}
                {{this.user.statistics.minutes_listened}}{{else}}?{{/if}} минут прослушано
            </span>
            <span>{{#if this.user.statistics.tracks_listened includeZero=true}}
                {{this.user.statistics.tracks_listened}}{{else}}?{{/if}} треков услышано
            </span>
            <span>{{#if this.user.statistics.artists_listened includeZero=true}}
                {{this.user.statistics.artists_listened}}{{else}}?{{/if}} артистов изучено
            </span>
        </div>
    </div>
</div>

{{#if this.playlists }}
    {{>playlists-section title="Плейлисты" href_all="#" playlists=this.playlists }}
{{/if}}

{{#if this.tracks }}
    {{>tracks-section title="Любимые треки" href_all="/all/loved" tracks=this.tracks }}
{{/if}}

{{#if this.artists}}
    {{>artists-section title="Любимые исполнители" href_all="/all/loved-artists" artists=this.artists }}
{{/if}}