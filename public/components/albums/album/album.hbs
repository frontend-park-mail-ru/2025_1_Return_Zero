<div class="album {{#unless this.index}}album_norder{{/unless}}">
    <span class="album__index">{{this.index}}</span>
    <img src="{{this.thumbnail_url}}" alt="" class="album__img">
    <a href="{{this.album_page}}" style="cursor: not-allowed;" class="album__title">{{this.title}}</a>
    <a href="{{this.artists.0.artist_page}}" class="album__artist">
        {{this.artists.0.title}}
    </a>
    <span class="album__description">{{this.description}}</span>
    
    {{#if this.isPlaying}}
        <img src="/static/img/pause.svg" alt="pause" class="album__play">
    {{else}}
        <img src="/static/img/play.svg" alt="play" class="album__play">
    {{/if}}
</div>
