<div class='header__logo-container'>
    <a class='header__logo'>
        <img class='logo' src='/static/img/logo.png' alt='logo' />
    </a>
</div>

<div class='header__main'>
    <form class='header__search' onsubmit='return false;'>
        <img class='search-icon' src='/static/img/icon-search.svg' />
        <input type='text' id='search' name='search' placeholder='поиск...' />
    </form>
    <nav class='header__nav'>
        <ul class='header-list'>
            {{#each this.navItems}}
                <li class='item'>
                    <a href='{{this.href}}'>
                        <img class='header__icon' src='{{this.icon}}' />
                        <span class='header__span'>{{this.text}}</span>
                    </a>
                </li>
            {{/each}}
        </ul>
    </nav>
    {{#if this.user}}
        <div class='header__profile'>
            <img
                class='profile__img'
                src='{{this.user.avatar_url}}'
                alt='profile'
            />
            <div class='profile__dropdown'>
                <span class='profile__user'>{{this.user.username}}</span>
                <a href='/profile'>Профиль</a>
                <a href='/profile/settings'>Настройки</a>
                <a href='/logout'>Выйти</a>
            </div>
        </div>
    {{else}}
        <div class='header__auth'>
            <a class='btn' href='#login'>Войти</a>
            <a class='btn' href='#register'>Регистрация</a>
        </div>
    {{/if}}
</div>