{
  "compilerOptions": {
    "baseUrl": "public",
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "es6",
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": true,

    "jsx": "react",
    "jsxFactory": "h",
    
    "paths": {
      "libs/*": ["public/libs/*"],
      "utils/*": ["public/utils/*"],
      "components/*": ["public/components/*"],
      "pages/*": ["public/pages/*"]
    }
  },
  "include": ["public/**/*"],
  "exclude": ["node_modules"]
}


